<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <EditTextPreference
        android:key="@string/prefs_location_key"
        android:defaultValue="@string/default_location"
        android:title="@string/title_settings_location_dialog"
        android:dialogTitle="@string/title_settings_location_dialog"
        />
    <ListPreference
        android:key="@string/units_label_key"
        android:title="@string/settings_units_title"
        android:defaultValue="@string/units_value"
        android:entries="@array/units"
        android:entryValues="@array/units_values"
        />
</PreferenceScreen>